<!DOCTYPE html>
<html>
	<head>
	  <title>Ezee Learning</title>
	  <%= favicon_link_tag "/images/favicon.ico" %>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <!-- Include for MindMaps Render -->
	  <%= javascript_include_tag "flashobject" %>
	  <!-- Include for MathJax Render -->
	  <script type="text/x-mathjax-config">
			MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
			// "HTML-CSS": { linebreaks: { automatic: true, width: "75% container" } }
		</script>
	  <script type="text/javascript" src="//cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
	  <!-- Include for Font-Awesome Icons Render -->
	  <link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet">
	  <%= csrf_meta_tags %>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body>
		<!-- RENDER HEADER -->
		<%= render "layouts/header" %>

		<!-- RENDER BODY -->
		<div class="">
			<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">	
				<% flash.each do |name,msg| %>
					<%= content_tag(:div, msg, class: "alert alert-info") %>
					<button type="button" class="close" data-dismiss="alert" style="margin: -57px 20px 0 0;">
						<span aria-hidden="true">&times;</span>
						<span class="sr-only">Close</span>
					</button>
				<% end %>
			</div>

			<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
				<%= yield %>
			</div>
		</div>

		<!-- RENDER FOOTER -->
		<%= render "layouts/footer" %>
	</body>

</html>
