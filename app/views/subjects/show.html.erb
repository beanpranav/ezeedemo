<div class="row unrow">
	<div class="col-xs-12 col-sm-3" style="padding:0px;">
		<a href="<%= if user_signed_in? then root_path else common_dashboard_path end %>" class="supress-a">
			<div class="secondary-nav secondary-nav-button">
				<i class="fa fa-2x fa-arrow-left secondary-nav-icon pull-left"></i>
				<h3><%= @subject.standard %>th <%= @subject.board %></h3>
				<h2>All Subjects</h2>
			</div>
		</a>
	</div>

	<div class="col-xs-12 col-sm-9">
		<div class="secondary-nav secondary-nav-invert">			
			<i class="fa fa-2x fa-book content-list-icon-invert pull-left"></i>
			<h2 class="font-invert"><b><%= @subject.name %></b></h2>
			<h3 class="font-invert"><%= @chapters_all.count %> Chapters</h3>

  		<div class="secondary-nav-actions pull-right dropdown">
  		  <ul class="nav nav-tabs" role="tablist">
  		    <li role="presentation" class="active"><a href="#term1" aria-controls="term1" role="tab" data-toggle="tab">Term 1</a></li>
  		    <li role="presentation"><a href="#term2" aria-controls="term2" role="tab" data-toggle="tab">Term 2</a></li>
  		    <li role="presentation"><a href="#textbook" aria-controls="term2" role="tab" data-toggle="tab">Book</a></li>
  		  </ul>
  		</div>

		</div>
	</div>
</div>

<div class="row unrow">
	<div class="col-xs-12 col-sm-3" style="padding:0px;">
		<%= render "subjects/spi" %>

		<% if user_signed_in? && current_user.role == "Admin" %>
			<%= link_to "Add New Chapter", controller: "chapters", action: "new", subject_id: @subject.id %>
		<% end %>
	</div>

	<div class="col-xs-12 col-sm-9">
		<div class="content-container">
			<div class="tab-content">
				<div class="tab-pane" id="textbook"><%= render "subjects/textbook" %></div>
				<div class="tab-pane active" id="term1"><%= render "subjects/term1" %></div>
				<div class="tab-pane" id="term2"><%= render "subjects/term2" %></div>
			</div>
		</div>
	</div>
</div>