  <div class="secondary-nav secondary-nav-invert">

    <%= link_to '<i class="fa fa-2x fa-arrow-left content-list-icon-invert pull-left"></i>'.html_safe, chapter_path(@chapter) %></i>

    <i class="font-invert content-list-icon-green pull-right"><b>75%</b></i>
    <h2 class="font-invert"><b>Prep: <%= @chapter.name %></b></h2>
    <h3 class="font-invert">MCQs: <%= if user_signed_in? then "2" else "0" end %> / <%= @mcqs.count %></h3>

  </div>


		<div class="row content-container">

  		<div class="tab-content">

				<div class="tab-pane active" id="mcq-all">

    			<div class="assessment-action center">
    	    	<a href="#mcq-all" data-toggle="tab">
    	    		<button type="button" class="btn btn-sm btn-modal-green" style="margin-right:1px;"><i class="fa fa-th"></i></button>
    	    	</a>
    	    </div>

    	    <div class="assessment-container">
						<h2 class="center"><b>Prepare for 1 mark MCQs</b></h2>
						<h3 class="center">choose one to begin</h3>
						<div class="assessment-questions-container"> 
		      	  <% @mcqs.each.with_index(1) do |assessment_content, i| %>
			      	  <a href="#mcq-<%= i %>" data-toggle="tab">
			      	  	<div class="question-icon-<%= ["default", "green", "red"].sample %>"><%= i %></div>
			      	  </a>
			      	<% end %>
						</div>
						<br><br>
			      						      		
		      </div>

				</div>
				
				<% @mcqs.each.with_index(1) do |assessment_content, i| %>
					
					<div class="tab-pane" id="mcq-<%= i %>">
						
						<div class="assessment-action center">
				      <% if i == 1 %>
				      	<button type="button" class="btn btn-sm btn-modal" disabled="disabled"><i class="fa fa-fw fa-arrow-left"></i></button>
				    	<% else %>
					      <a href="#mcq-<%= i-1 %>" data-toggle="tab">
					    		<button type="button" class="btn btn-sm btn-modal-green"><i class="fa fa-fw fa-arrow-left"></i></button>
					    	</a>
					    <% end %>

				    	<a href="#mcq-all" data-toggle="tab">
				    		<button type="button" class="btn btn-sm btn-modal-green"><i class="fa fa-th"></i></button>
				    	</a>

				    	<% if i == @mcqs.count %>
								<button type="button" class="btn btn-sm btn-modal" disabled="disabled"><i class="fa fa-fw fa-arrow-right"></i></button>
				    	<% else %>
					    	<a href="#mcq-<%= i+1 %>" data-toggle="tab">
					    		<button type="button" class="btn btn-sm btn-modal-green"><i class="fa fa-fw fa-arrow-right"></i></button>
					    	</a>
					    <% end %>
				    </div>


						<div class="col-sm-10 col-sm-offset-1 assessment-container">
						  
						  <div class="assessment-question">
						  	<div class="question-icon"><%= i %></div>
						  	<div class="assessment-text"><b><%= assessment_content.question.html_safe %></b></div>
						  </div>

						  <div class="mcq-option">
						    <div class="answer-icon<%= "-green" if assessment_content.mcq_answer == "A" %>">A</div>
						    <div class="answer-text"><%= assessment_content.answer_a.html_safe %></div>
						  </div>
						  <div class="mcq-option">
						    <div class="answer-icon<%= "-green" if assessment_content.mcq_answer == "B" %>">B</div>
						    <div class="answer-text"><%= assessment_content.answer_b.html_safe %></div>
						  </div>
						  <div class="mcq-option">
						    <div class="answer-icon<%= "-green" if assessment_content.mcq_answer == "C" %>">C</div>
						    <div class="answer-text"><%= assessment_content.answer_c.html_safe %></div>
						  </div>
						  <div class="mcq-option">
						    <div class="answer-icon<%= "-green" if assessment_content.mcq_answer == "D" %>">D</div>
						    <div class="answer-text"><%= assessment_content.answer_d.html_safe %></div>
						  </div>

						  <br><br>

						  <b>Explanation:</b>
						  <div class="assessment-answer">
						    <div class="answer-icon-green"><%= assessment_content.mcq_answer %></div>
						    <div class="assessment-text"><%= assessment_content.mcq_explanation.html_safe %></div>
						  </div>
							

						  <% if user_signed_in? && current_user.role == "Admin" %>
						  	<br><br>
						  	<%= link_to 'Edit Assessment', edit_assessment_content_path(assessment_content), class: "btn btn-sm btn-primary" %>
						  <% end %>



						</div>

			    </div>

				<% end %>

			</div>
		</div>

