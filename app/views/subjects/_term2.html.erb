
<div class="panel-primary">
    <div class="panel-title">
	   Term 2
    </div>
</div>

<div class="panel-body">
	<ul class="content-list">
		<% @subject.chapters.sort_by(&:chapterNumber).each do |chapter| %>
			<% if chapter.term == 2 %>
				<a href="<%= chapter_path(chapter) %>" class="supress-a">
					<li class="content-list-item">
						<i class="fa fa-2x fa-check content-list-icon-<%= ["default", "primary", "green", "orange", "red"].sample %> pull-left"></i>
						<h3>Chapter <%= chapter.chapterNumber%></h3>
						<h2><%= chapter.name %></h2>
					</li>
				</a>
			<% end %>
		<% end %>
	</ul>
</div>