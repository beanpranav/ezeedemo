<h1>Listing study_materials</h1>

<%= link_to 'New Study material', new_study_material_path %>
<br><br>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Chapter</th>
      <th>Name</th>
      <th>Video source</th>
      <th>Video duration</th>
      <th>Model source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_materials.each do |study_material| %>
      <tr>
        <td><%= study_material.chapter.name %></td>
        <td><%= study_material.name %></td>
        <td><%= study_material.video_source %></td>
        <td><%= study_material.video_duration %></td>
        <td><%= study_material.model_source %></td>
        <td><%= link_to 'Show', study_material %></td>
        <td><%= link_to 'Edit', edit_study_material_path(study_material) %></td>
        <td><%= link_to 'Destroy', study_material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
