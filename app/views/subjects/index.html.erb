<h1>Listing subjects</h1>
<%= link_to 'New Subject', new_subject_path %>
<br><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Board</th>
      <th>Standard</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.board %></td>
        <td><%= subject.standard %></td>
        <td><%= subject.name %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Delete', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>