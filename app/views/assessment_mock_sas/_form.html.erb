<%= form_for(@assessment_mock_sa) do |f| %>
  <% if @assessment_mock_sa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assessment_mock_sa.errors.count, "error") %> prohibited this assessment_mock_sa from being saved:</h2>

      <ul>
      <% @assessment_mock_sa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="center">
    <% if params[:action] == "new" %>
      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :subject_id %>
      <%= f.hidden_field :term %>
      <%= f.hidden_field :attempt %>
      <%= f.hidden_field :score %>
      <div class="assessment-sections-container">
        <%= f.submit "BEGIN MOCK SA", class:"btn btn-block btn-green", style:"width:250px;" %>
      </div>
    <% else %>
      <div class="assessment-sections-container">
        <%= f.label :score, "My Score (out of 90)" %><br>
        <%= f.number_field :score, class: "form-control" %>
        <%= f.submit "SUBMIT MOCK SA SCORE", class:"btn btn-green", style:"width:250px;" %>
      </div>
    <% end %>
  </div>
<% end %>
