<!DOCTYPE html>
<html>
	<head>
	  <title>CBSE Hacker | Ezee Learning</title>
	  <%= favicon_link_tag "/images/favicon.ico" %>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <!-- Include for MindMaps Render -->
	  <%= javascript_include_tag "flashobject" %>
	  <!-- Include for 3D Interactives Render -->
	  <%= javascript_include_tag "rotate" %>
	  <%= csrf_meta_tags %>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body>
		<!-- RENDER HEADER -->
		<%= render "layouts/header" %>

		<!-- RENDER BODY -->
		<div class="">
			<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">	
				<% flash.each do |name,msg| %>
					<%= content_tag(:div, msg.html_safe, class: "alert alert-info") %>
					<button type="button" class="close" data-dismiss="alert" style="margin: -57px 20px 0 0;">
						<span aria-hidden="true">&times;</span>
						<span class="sr-only">Close</span>
					</button>
				<% end %>
			</div>

			<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
				<%= yield %>
			</div>
		</div>

		<!-- RENDER FOOTER -->
		<%= render "layouts/footer" %>
	</body>

</html>
