	<ul class="content-list">

		<% if @chapter.status == "Paid" %>
			
			<li class="content-list-item-lock">
				<i class="fa fa-2x fa-lock content-list-icon-green pull-left"></i>
				<h3>Studied: 0 / <%= @mcqs.count %></h3>
				<h2>1 mark: MCQs</h2>
			</li>

			<li class="content-list-item-lock">
				<i class="fa fa-2x fa-lock content-list-icon-green pull-left"></i>
				<h3>Studied: 0 / <%= @shortqs.count %></h3>
				<h2>2 & 3 marks: Subjective Short Qs</h2>
			</li>

			<li class="content-list-item-lock">
				<i class="fa fa-2x fa-lock content-list-icon-green pull-left"></i>
				<h3>Studied: 0 / <%= @longqs.count %></h3>
				<h2>5 marks: Subjective Long Qs</h2>
			</li>

		<% else %>
		
			<a href="<%= study_mcqs_chapter_path(@chapter) %>" class="supress-a">
				<li class="content-list-item">
					<i class="fa fa-2x fa-trophy content-list-icon-<%= ["default", "green"].sample %> pull-left"></i>
					<h3>Studied: 0 / <%= @mcqs.count %>, Correct: 5</h3>
					<h2>1 mark: MCQs</h2>
				</li>
			</a>

			<a href="<%= study_shortqs_chapter_path(@chapter) %>" class="supress-a">
				<li class="content-list-item">
					<i class="fa fa-2x fa-trophy content-list-icon-<%= ["default", "green"].sample %> pull-left"></i>
					<h3>Studied: 0 / <%= @mcqs.count %></h3>
					<h2>2 & 3 marks: Subjective Short Qs</h2>
				</li>
			</a>

			<a href="<%= study_longqs_chapter_path(@chapter) %>" class="supress-a">
				<li class="content-list-item">
					<i class="fa fa-2x fa-trophy content-list-icon-<%= ["default", "green"].sample %> pull-left"></i>
					<h3>Studied: 0 / <%= @longqs.count %></h3>
					<h2>5 marks: Subjective Long Qs</h2>
				</li>
			</a>

		<% end %>
			
	</ul>