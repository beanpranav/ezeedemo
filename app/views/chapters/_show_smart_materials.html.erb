	<ul class="content-list">
		<!-- TEMPORARY -->
		<% @chapter.study_materials.each do |study_material| %>
			
			<% if study_material.model_source? %>
				<% if @chapter.status == "Paid" %>
					
					<li class="content-list-item-lock">
						<i class="fa fa-2x fa-lock content-list-lock pull-left"></i>
						<h3>Chapter Map</h3>
						<h2><%= study_material.name %></h2>
					</li>

				<% else %>
				
						<li class="content-list-item" data-toggle="modal" data-target="#show-smart-material-<%= study_material.id %>">
							<i class="fa fa-2x fa-circle content-list-lock pull-left"></i>
							<h3>Visual Notes</h3>
							<h2><%= study_material.name %></h2>
						</li>

				    	
			    	<div class="modal" id="show-smart-material-<%= study_material.id %>" tabindex="-1" role="dialog" aria-hidden="true">
			    	  <div class="modal-dialog">
			    	    <div class="modal-content">
			    	      
			    	      <div class="panel-orange panel-title">
			    	      	<%= study_material.name %>
			    	      	<div class="modal-actions pull-right">
				    	      	<button type="button" class="btn btn-sm btn-modal-orange">Mark as Complete</button>
				    	      	<button type="button" class="btn btn-sm btn-modal" data-dismiss="modal"><i class="fa fa-times"></i></button>
				    	      </div>
			    	      </div>

			    	      <div class="modal-body"> 
		    	      		<div class="mapWrapper"><%= study_material.model_source.html_safe %></div>
			    	      </div>

			    	    </div>
			    	  </div>
			    	</div>

				<% end %>
			<% end %>
			
		<% end %>
	</ul>