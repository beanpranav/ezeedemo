	<ul class="content-list">

		<% if @chapter.status == "Paid" %>
			
			<li class="content-list-item-lock">
				<i class="fa fa-2x fa-lock content-list-icon-green pull-left"></i>
				<h3>0 / <%= @mcqs.count %> Completed</h3>
				<h2>1 mark: MCQs</h2>
			</li>

			<li class="content-list-item-lock">
				<i class="fa fa-2x fa-lock content-list-icon-green pull-left"></i>
				<h3>0 / <%= @shortqs.count %> Completed</h3>
				<h2>2 & 3 marks: Short questions</h2>
			</li>

			<li class="content-list-item-lock">
				<i class="fa fa-2x fa-lock content-list-icon-green pull-left"></i>
				<h3>0 / <%= @longqs.count %> Completed</h3>
				<h2>5 marks: Long questions</h2>
			</li>

		<% else %>
		
			<li class="content-list-item" data-toggle="modal" data-target="#mcq">
				<i class="fa fa-2x fa-trophy content-list-icon-<%= ["default", "green"].sample %> pull-left"></i>
				<h3>0 / <%= @mcqs.count %> Completed</h3>
				<h2>1 mark: MCQs</h2>
			</li>

    	<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 modal" id="mcq" tabindex="-1" role="dialog" aria-hidden="true">
    	  <div class="modal-dialog">
    	    <div class="modal-content">
						<%= render "chapters/show_assessment_mcqs" %>
    	    </div>
    	  </div>
    	</div>

			<li class="content-list-item" data-toggle="modal" data-target="#shortq">
				<i class="fa fa-2x fa-trophy content-list-icon-<%= ["default", "green"].sample %> pull-left"></i>
				<h3>0 / <%= @shortqs.count %> Completed</h3>
				<h2>2 & 3 marks: Short questions</h2>
			</li>

    	<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 modal" id="shortq" tabindex="-1" role="dialog" aria-hidden="true">
    	  <div class="modal-dialog">
    	    <div class="modal-content">
						<%= render "chapters/show_assessment_shortqs" %>
    	    </div>
    	  </div>
    	</div>

			<li class="content-list-item" data-toggle="modal" data-target="#longq">
				<i class="fa fa-2x fa-trophy content-list-icon-<%= ["default", "green"].sample %> pull-left"></i>
				<h3>0 / <%= @longqs.count %> Completed</h3>
				<h2>5 marks: Long questions</h2>
			</li>

    	<div class="col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 modal" id="longq" tabindex="-1" role="dialog" aria-hidden="true">
    	  <div class="modal-dialog">
    	    <div class="modal-content">
						<%= render "chapters/show_assessment_longqs" %>
    	    </div>
    	  </div>
    	</div>

		<% end %>
			
	</ul>