  
  <div class="panel-green panel-title">
  	<%= @chapter.name %>: Short questions
  	<div class="modal-actions pull-right">
    	<button type="button" class="btn btn-sm btn-modal-green" disabled="disabled">Incomplete</button>
    	<button type="button" class="btn btn-sm btn-modal" data-dismiss="modal"><i class="fa fa-times"></i></button>
    </div>
  </div>

  <div class="modal-body"> 
		<div class="docWrapper">

  			
  			<div class="tab-content">

				<div class="tab-pane active" id="shortq-all">

					<div class="assessmentWrapper">

						<div class="assessment-container">
							<br>
							<h2 class="center"><b>Prepare for 2 & 3 marks Short questions</b></h2>
							<h3 class="center">choose one to begin</h3>
							<div class="assessment-questions-container"> 
			      	  <% @shortqs.each.with_index(1) do |assessment_content, i| %>
				      	  <a href="#shortq-<%= i %>" data-toggle="pill">
				      	  	<div class="question-icon-<%= ["default", "green", "orange"].sample %>"><%= i %></div>
				      	  </a>
				      	<% end %>
							</div>
							<br><br>

			      						      		
		      	</div>

		      </div>

    			<div class="assessmentAction center">
    	    	<a href="#shortq-all" data-toggle="pill">
    	    		<button type="button" class="btn btn-sm btn-modal-green">All Questions</button>
    	    	</a>
    	    </div>

				</div>
				
				<% @shortqs.each.with_index(1) do |assessment_content, i| %>
					
					<div class="tab-pane" id="shortq-<%= i %>">
						
						<div class="assessmentWrapper">

							<div class="assessment-container">
							  
							  <div class="assessment-question">
							  	<div class="question-icon"><%= i+1 %></div>
							  	<div class="assessment-text"><b><%= assessment_content.question %></b></div>
							  </div>

							  <b>Answer:</b>
							  <div class="assessment-answer">
							    <div class="answer-icon-mark">1m</div>
							    <div class="assessment-text"><%= assessment_content.answer_a.html_safe %></div>
							  </div>
							  <div class="assessment-answer">
							    <div class="answer-icon-mark">1m</div>
							    <div class="assessment-text"><%= assessment_content.answer_b.html_safe %></div>
							  </div>

							  <% if assessment_content.answer_c.length >10 %>
							    <div class="assessment-answer">
							      <div class="answer-icon-mark">1m</div>
							      <div class="assessment-text"><%= assessment_content.answer_c.html_safe %></div>
							    </div>
							  <% end %>

							  <% if user_signed_in? && current_user.role == "Admin" %>
							  	<br><br>
							  	<%= link_to 'Edit Assessment', edit_assessment_content_path(assessment_content), class: "btn btn-sm btn-primary" %>
							  <% end %>
							</div>

						</div>													

						<div class="assessmentAction center">
				      <% if i == 1 %>
				      	<button type="button" class="btn btn-sm btn-modal pull-left" disabled="diabled" style="margin-right: -1px;"><i class="fa fa-fw fa-arrow-left"></i> Previous</button>
				    	<% else %>
					      <a href="#shortq-<%= i-1 %>" data-toggle="pill">
					    		<button type="button" class="btn btn-sm btn-modal-green pull-left"><i class="fa fa-fw fa-arrow-left"></i> Previous</button>
					    	</a>
					    <% end %>

				    	<a href="#shortq-all" data-toggle="pill">
				    		<button type="button" class="btn btn-sm btn-modal-green">All Questions</button>
				    	</a>

				    	<% if i == @shortqs.count %>
								<button type="button" class="btn btn-sm btn-modal pull-right" disabled="diabled" style="margin-left: 22px;">Next <i class="fa fa-fw fa-arrow-right"></i></button>
				    	<% else %>
					    	<a href="#shortq-<%= i+1 %>" data-toggle="pill">
					    		<button type="button" class="btn btn-sm btn-modal-green pull-right" style="margin-left: 22px;">Next <i class="fa fa-fw fa-arrow-right"></i></button>
					    	</a>
					    <% end %>
				    </div>

			    </div>

				<% end %>

			</div>
		</div>
  </div>