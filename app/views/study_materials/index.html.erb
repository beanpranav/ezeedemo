
  <h1>Listing study_materials</h1>

  <%= link_to 'New Study material', new_study_material_path %>
  <br><br>


  <table class="table table-hover table-condensed table-responsive">
    <thead>
      <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Name</th>
        <th>Video</th>
        <th>Interactive</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @study_materials.sort_by(&:id).each do |study_material| %>
        <tr>
          <td><%= study_material.id %></td>
          <td><%= study_material.material_type %></td>
          <td><%= study_material.name %></td>
          <td><%= if study_material.video_content_id? then "YES" else "-" end %></td>
          <td><%= if study_material.interactive_content_id? then "YES" else "-" end %></td>
          <td><%= link_to 'Edit', edit_study_material_path(study_material) %></td>
          <td><%= link_to 'Delete', study_material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
